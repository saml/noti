{
    "name": "noti"
    , "description": "crawls web pages and displays desktop notifications according to user specified rules"
    , "version": "1.0"
    , "background_page": "background.html"
    , "options_page": "options.html"
    , "browser_action": {
        "default_title": "noti"
        , "default_icon": "icon-128.png"
        , "default_popup": "popup.html"
    }
    , "permissions": [
        "tabs"
        , "http://*/"
        , "https://*/"
        , "notifications"
    ]
}
